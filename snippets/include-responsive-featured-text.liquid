{% if type == 'block' %}
  {% assign image_d = block.settings.image_d %}
  {% assign image_m = block.settings.image_m %}
  {% assign title = block.settings.title %}
  {% assign content = block.settings.content %}
  {% assign text_size = block.settings.text_size %}
  {% assign text_alignment = block.settings.text_alignment %}
  {% assign button_label = block.settings.button_label %}
  {% assign button_link = block.settings.button_link %}
 {% assign section_color_bg = block.settings.section_color_bg %}
{% assign max_width = block.settings.max_width %}
{% else %}
  {% assign image_d = section.settings.image_d %}
  {% assign image_m = section.settings.image_m %}
  {% assign title = section.settings.title %}
  {% assign content = section.settings.content %}
  {% assign text_size = section.settings.text_size %}
  {% assign text_alignment = section.settings.text_alignment %}
  {% assign button_label = section.settings.button_label %}
  {% assign button_link = section.settings.button_link %}
  {% assign section_color_bg = section.settings.section_color_bg %}
  {% assign max_width = section.settings.max_width %}
{% endif %}

<div class="">
  <div class="">
    <div class="homepage_content section {{ text_alignment }} clearfix" style="margin: 5px 5%;">
      {% if image_d %}
      <div class="desktop_img">{% include 'image-element', image: image_d.src, alt: image_d.alt %}</div>
      {% endif %}
      
      {% if image_m %}
      <div class="mobile_img">  {% include 'image-element', image: image_m.src, alt: image_m.alt %}</div>
      {% endif %}      

      {% if title != blank %}
        <h2 class="title">
          {{ title }}
        </h2>
        <div class="feature_divider"></div>
      {% endif %}

      <div class="{{ text_size }}">
        {% if content != blank %}
          {{ content }}
        {% endif %}

        {% if button_label != blank %}
          <a href="{{ button_link }}" class="action_button">
            {{ button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
    .mobile_img{
    display: none !important;
    }  
      .desktop_img{
    display: block !important;
    }
  
  @media only screen and (max-width: 798px) {
    .featured_text {
      text-align: {{ text_alignment }};
    }
    .desktop_img{
    display: none !important;
    }
    .mobile_img{
    display: block !important;
    }  
    
  }
</style>