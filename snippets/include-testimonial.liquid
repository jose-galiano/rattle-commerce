  {% assign test-store = 'store_name_' | append : i %}
  {% assign testimon_store = [test-store] %}    
    

<div class="row text-center">
        <div class="testimn col-md" >
          <div class="col-md"><i class="quote-mark fas fa-quote-left"></i></div>
        
        {% if testimon != blank %}
        <h2 class="testimonial_title"> {{testimon}}</h2>
        {% endif %}
          
        {% if testimon_text != blank %}
        <p class="testimonial_text">{{ testimon_text | replace: '<p', '<p class="testimonial_text"' }}</p>
        {% endif %}
          
         {% if testimon_name != blank %}
        <p class="testimonial_name"> {{ testimon_name }}</p>
         {% endif %}
          
        {% if testimon_store != blank %}
        <p class="testimonial_city"> {{ testimon_store }}</p>
        {% endif %}
     
         
      </div>
  </div>

