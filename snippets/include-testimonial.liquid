<div class="testimonials {% if wide_display == false %}container{% else %}container-fluid{%endif%}">

<div class="testimonial_prod {% if wide_display == false %}container{% else %}container-fluid{%endif%}">
 
{% for i in (1..4) %}
  
  {% assign test-tit = 'title_test_' | append : i %}
  {% assign testimon = [test-tit] %}
  {% assign test-text = 'testimonial_' | append : i %}
  {% assign testimon_text = [test-text] %} 
  {% assign test-name = 'name_' | append : i %}
