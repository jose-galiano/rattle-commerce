{% comment %}
** Logos - homepage partial **
- Draggable section
- Uses blocks
{% include 'image-element', image: block.settings.image, alt: block.settings.image.alt %}
{% endcomment %}

    
<div class="logo-slick-section container">
  <div class="row text-center">
    <div class="col-md"><h1 class="title logo">{{section.settings.headline}}</h1>
    </div>
  </div>
  <div class="">
    <div class="">
    {% if section.blocks.size > 0 %}
      <div class="featured_in">
        {% for block in section.blocks %}
          <div class="">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="">
            {% endif %}
            {% if block.settings.image != blank %}
                <img src="https://cdn.shopify.com/s/files/1/0276/4174/1415/{{ block.settings.image }}">
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
            
          </div>
        {% endfor %}
      </div>
    {% endif %}

    </div>
  </div>
</div>

<style>

  
h1.title.logo {
   color: {{section.settings.headline_color}} !important;
}
</style>

{% schema %}
  {
    "name": "Logo Slick",
    "class": "logo-Slick-section",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "headline",
        "label": "Heading",
        "default": "Title Section"
      },
      {
        "type": "color",
        "id": "headline_color",
        "label": "Section Title Color"
      },
      {
        "type": "text",
        "id": "url",
        "label": "link",
        "default": "https://"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "400 x 300px recommended"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo Slick",
        "category": "Image",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
.featured_in img{
  -webkit-filter: grayscale(100%); 
  filter: grayscale(100%);
  max-width: 100%;
  height: auto;
}
.featured_in img:hover{
transition-duration: 1s;
  -webkit-filter: grayscale(0%);
  filter: grayscale(0%);}
</style>