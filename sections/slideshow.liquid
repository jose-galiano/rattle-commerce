{% comment %}
** Slideshow - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}


{% assign count_i = 0 %}
{% assign count_s = 0 %}
{% assign current_time = "now" | date: "%Y-%m-%d %H:%M" %}



 <div class="homepageslide desktop_vid container-fluid slidehome bg-coleur">
   {% for block in section.blocks %}
   {% if current_time >= section.settings.s_time and current_time <= section.settings.e_time %}
<h1>display:unset;</h1>
      {% endif %}
   <div>{%if block.settings.button1_link != blank %}<a href="{{block.settings.button1_link}}">{%endif%}{% include 'image-element', image: block.settings.image_d, alt: block.settings.image_d.alt, stretch_width: true %}{%if block.settings.button1_link != blank %}</a>{%endif%}</div>
   {%endfor%} 
  </div>

 <div class="homepageslide mobile_vid container-fluid slidehome bg-coleur">
   {% for block in section.blocks %}
    <div>{%if block.settings.button1_link != blank %}<a href="{{block.settings.button1_link}}">{%endif%}{% include 'image-element', image: block.settings.image_m, alt: block.settings.image_m.alt, stretch_width: true %}{%if block.settings.button1_link != blank %}</a>{%endif%}</div>
   {%endfor%} 
  </div>

<style>
  .slidehome {
    padding-top: 10px;
}
  .slick-dots {
    position: absolute !important;
    bottom: 0 !important;
}
  .slick-dotted.slick-slider {
    margin-bottom: 0px;
}
  .slick-dots li button:before
    {
        font-size: 20px;
        line-height: 20px;
    }
</style>

{% schema %}

{
  "name": "Slideshow",
  "class": "slideshow-section under-menu",
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    }  
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_d",
          "label": "Image Desktop",
          "info": "1700 x 360px recommended"
        },
        {
          "type": "image_picker",
          "id": "image_m",
          "label": "Image Mobile",
          "info": "480 x 500px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Your headline"
        },
        {
          "type": "url",
          "id": "button1_link",
          "label": "Link"
        },
		{
        "type": "text",
        "id": "s_time",
        "label": "Start Time (%Y-%m-%d %H:%M)",
        "default": "2020-01-22 12:33"
  		},
    	{
        "type": "text",
        "id": "e_time",
        "label": "End Time (%Y-%m-%d %H:%M)",
        "default": "2020-01-25 12:33"
   		 }
        
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "category": "Image",
    "settings": {
    },
    "blocks": [
      {
        "type": "image",
        "settings": {
          "image_d": ""
        }
      },
      {
        "type": "image",
          "settings": {
          "image_d": ""
}
      }
    ]
  }]
}

{% endschema %}
