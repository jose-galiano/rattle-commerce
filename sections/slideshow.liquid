{% comment %}
** Slideshow - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}


{% assign count_i = 0 %}
{% assign count_s = 0 %}

 <div class="homepageslide desktop_vid container-fluid slidehome bg-coleur">
   {% for block in section.blocks %}
   <div>{%if block.settings.button1_link != blank %}<a href="{{block.settings.button1_link}}">{%endif%}{% include 'image-element', image: block.settings.image_d, alt: block.settings.image_d.alt, stretch_width: true %}{%if block.settings.button1_link != blank %}</a>{%endif%}</div>
   {%endfor%} 
  </div>

 <div class="homepageslide mobile_vid container-fluid slidehome bg-coleur">
   {% for block in section.blocks %}
    <div>{%if block.settings.button1_link != blank %}<a href="{{block.settings.button1_link}}">{%endif%}{% include 'image-element', image: block.settings.image_m, alt: block.settings.image_m.alt, stretch_width: true %}{%if block.settings.button1_link != blank %}</a>{%endif%}</div>
   {%endfor%} 
  </div>

<style>
  .slidehome {
    padding-top: 10px;
}
  .slick-dots {
    position: absolute !important;
    bottom: 0 !important;
}
  .slick-dotted.slick-slider {
    margin-bottom: 0px;
}
  .slick-dots li button:before
    {
        font-size: 20px;
        line-height: 20px;
    }
</style>

{% schema %}

{
  "name": "Slideshow",
  "class": "slideshow-section under-menu",
  "settings": [
    {
      "type": "checkbox",
      "id": "wide_display",
      "label": "Wide display",
      "default": true
    },
    {
      "type": "select",
      "id": "slideshow_text_animation",
      "label": "Text animation",
      "options": [
        {
          "value": "",
          "label": "None"
        },
        {
          "value": "fadeIn",
          "label": "Fade In"
        },
        {
          "value": "fadeInUp",
          "label": "Fade Up"
        },
        {
          "value": "fadeInDown",
          "label": "Fade Down"
        }
      ],
      "default": "fadeInDown"
    },
    {
      "type": "select",
      "id": "slideshow_animation",
      "label": "Gallery transition",
      "options": [
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "fade",
          "label": "Fade"
        }
      ],
      "default": "slide"
    },
    {
      "type": "range",
      "id": "slideshow_speed",
      "label": "Change slides every",
      "min": 0,
      "max": 12,
      "step": 1,
      "default": 6,
      "unit": "sec"
    },
    {
      "type": "checkbox",
      "id": "activate_adaptiveHeight",
      "label": "Enable adaptive height",
      "info": "Slideshow will adjust based on height of individual slides"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_d",
          "label": "Image Desktop",
          "info": "1700 x 360px recommended"
        },
 {
          "type": "image_picker",
          "id": "image_m",
          "label": "Image Mobile",
          "info": "480 x 500px recommended"
        },
        {
          "type": "richtext",
          "id": "pretext",
          "label": "Preheading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Your headline"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Subheading"
        },
        {
          "type": "url",
          "id": "button1_link",
          "label": "Link"
        }
        
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "category": "Image",
    "settings": {
    },
    "blocks": [
      {
        "type": "image",
        "settings": {
          "image_d": ""
        }
      },
      {
        "type": "image",
          "settings": {
          "image_d": ""
}
      }
    ]
  }]
}

{% endschema %}
