  "PRO25" => 25,
  "PRO30" => 30,
  "PRO35" => 35,
  "PRO40" => 40,
  "PRO45" => 45,
  "PRO50" => 50,
  "BETA" => 90,
}
MESSAGE = "Pro discount" #this is the text that appears next to discount credit
customer = Input.cart.customer

if customer #checks to see if user is logged in
  if customer.tags.include?(wholesale) #checks to see if user has appropriate discount tag
    DISCOUNTS_BY_TAG.each_pair do |tag, discount| #cycle through the above array of tags
      if customer.tags.include?(wholesale) #pairs the customer's discount level from the above array of tags
        discount = #{discount}
        Input.cart.line_items.each do |line_item|
          line_item.change_line_price(
            line_item.line_price * (Decimal.new(1) - discount / 100),
            message: MESSAGE,
          )
        end
      end
    end
  end
end

